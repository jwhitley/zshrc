# Add Homebrew to the path
path_prepend=( ~/local/$ZSHRC_OS/volt /usr/local/share/npm/bin )

# Disable flow control. For some reason, vim under tmux is respecting flow
# control, meaning that <C-S> locks the vim window until <C-Q> is entered.
stty -ixon

# Make the forward-delete key work in Terminal
bindkey "\e[3~" delete-char

# Make sure all interactive sessions are connected to the ssh-agent
# if [[ -z $SUDO_USER ]]; then
#     zchain_enbale_new_agent=true
# fi

export EMAIL='John Whitley <whitley@bangpath.org>'

export GVIM_EDITOR=`which mvim`

# Use MacVim in a similar mode to "mate -w" for commit messages,
# via the MacVim FAQ (https://github.com/b4winckler/macvim/wiki/FAQ)
export BZR_EDITOR='mvim_wait'
export GIT_EDITOR='vim'

# This is here for using subversion with UTF-8 repos, e.g. the TextMate
# bundle repository 
export LC_CTYPE=en_US.UTF-8

export NODE_PATH=/usr/local/lib/node_modules

# In case other Vagrant provider plugins are installed, default to VirtualBox
export VAGRANT_DEFAULT_PROVIDER=virtualbox

# Homebrew perl setup

if [[ -d ~/perl5 ]]; then
  export PATH="/Users/whitley/perl5/bin${PATH+:}${PATH}"
  export PERL5LIB="/Users/whitley/perl5/lib/perl5${PERL5LIB+:}${PERL5LIB}"
  export PERL_LOCAL_LIB_ROOT="/Users/whitley/perl5${PERL_LOCAL_LIB_ROOT+:}${PERL_LOCAL_LIB_ROOT}"
  export PERL_MB_OPT="--install_base \"/Users/whitley/perl5\""
  export PERL_MM_OPT="INSTALL_BASE=/Users/whitley/perl5"
fi

